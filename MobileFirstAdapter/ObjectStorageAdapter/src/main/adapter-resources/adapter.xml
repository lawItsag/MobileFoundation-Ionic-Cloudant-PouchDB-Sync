<mfp:adapter name="ObjectStorageAdapter"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mfp="http://www.ibm.com/mfp/integration"
	xmlns:http="http://www.ibm.com/mfp/integration/http">

	<displayName>ObjectStorageAdapter</displayName>
	<description>ObjectStorageAdapter</description>

	<JAXRSApplicationClass>org.mycity.myward.ObjectStorageAdapterApplication</JAXRSApplicationClass>
	<property name="projectId" displayName="Object Storage projectId" defaultValue="YOUR_OBJECT_STORAGE_PROJECT_ID"  />
	<property name="userId" displayName="Object Storage userId" defaultValue="YOUR_OBJECT_STORAGE_USER_ID"  />
	<property name="password" displayName="Object Storage password" defaultValue="YOUR_OBJECT_STORAGE_PASSWORD"  />
	<property name="containerName" displayName="Object Storage password" defaultValue="YOUR_OBJECT_STORAGE_CONTAINER_NAME"  />
	<property name="region" displayName="Region (dallas or london) where container is hosted. Specify a value of 'dallas' or 'london'" defaultValue="YOUR_OBJECT_STORAGE_REGION"  />

</mfp:adapter>
